<h1>Dostępne produkty:</h1>

<table>
<% @products.each do |product| %>
  <tr>
    <td>
      <a href="/products/<%= product.id %>"><%= product.name %></a>
    </td>

    <td>
      <a href="/products/<%= product.id %>/edit">Zmień</a>
    </td>

    <td>
      <form action="/products/<%= product.id %>" method="POST" id="delete">
        <input type="hidden" name="_method" value="DELETE">
          <input type="submit" value="Usuń produkt">
      </form>
    </td>
  </tr>
<% end %>
</table>
<a href="/products/new">Dodaj nowy produkt</a>
